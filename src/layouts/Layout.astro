---
import Header from '../components/Header.jsx';
import Footer from '../components/Footer.jsx';
import ParticlesBackground from '../components/ParticlesBackground.jsx';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{Astro.props.title} | Neon Injector</title>
    <meta name="description" content={Astro.props.description} />
    <meta name="keywords" content="Neon Injector, Mobile Legends, skin injector, Android, gaming" />
    <meta name="author" content="Neon Injector Team" />
    <meta name="robots" content="index, follow" />
    <meta property="og:title" content={Astro.props.title} />
    <meta property="og:description" content={Astro.props.description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://neon-injector.my.id" />
    <meta property="og:image" content="https://neon-injector.my.id/og-image.webp" />
    <meta property="og:image:type" content="image/webp" />
    <meta property="og:site_name" content="Neon Injector" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={Astro.props.title} />
    <meta name="twitter:description" content={Astro.props.description} />
    <meta name="twitter:image" content="https://neon-injector.my.id/og-image.webp" />
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Sansita:wght@400;700;800;900&display=swap" as="style" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Sansita:wght@400;700;800;900&display=swap" media="print" onload="this.media='all'" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/global.css" />
  </head>
  <body class="min-h-screen flex flex-col bg-[var(--bg-color)]">
    <Header client:load />
    <main class="flex-1">
      <ParticlesBackground client:visible />
      <slot />
    </main>
    <Footer client:load />
  </body>
</html>